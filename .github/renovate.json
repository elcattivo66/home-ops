{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":enablePreCommit",
    ":automergeDigest",
    ":automergeBranchPush",
    "github>elcattivo66/k3s-gitops//.github/renovate/allowedVersions.json5",
    "github>elcattivo66/k3s-gitops//.github/renovate/autoMerge.json5",
    "github>elcattivo66/k3s-gitops//.github/renovate/commitMessage.json5",
    "github>elcattivo66/k3s-gitops//.github/renovate/customDatasources.json5",
    "github>elcattivo66/k3s-gitops//.github/renovate/customManagers.json5",
    "github>elcattivo66/k3s-gitops//.github/renovate/groups.json5",
    "github>elcattivo66/k3s-gitops//.github/renovate/labels.json5",
    "github>elcattivo66/k3s-gitops//.github/renovate/semanticCommits.json5",
    "github>elcattivo66/k3s-gitops//.github/renovate/packageRules.json5"
  ],
  "ignorePaths": ["archive/**"],
  "flux": {
    "fileMatch": ["kubernetes/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["kubernetes/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["kubernetes/.+\\.ya?ml$"]
  }
}

